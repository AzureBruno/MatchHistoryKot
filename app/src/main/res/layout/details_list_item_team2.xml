<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/details_item">


    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_champion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_score"
            android:fontFamily="@font/aldrich"
            android:textColor="@android:color/primary_text_dark"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/image_champion"
            app:layout_constraintStart_toStartOf="@+id/text_nickname"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_dark"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nickname"
            app:layout_constraintTop_toTopOf="@+id/image_champion"
            app:layout_constraintEnd_toStartOf="@+id/image_champion" android:layout_marginEnd="32dp"/>

</android.support.constraint.ConstraintLayout>