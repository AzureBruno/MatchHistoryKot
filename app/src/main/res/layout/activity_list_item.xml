<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item6"
            app:layout_constraintStart_toEndOf="@+id/img_item5" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/img_item5"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item5"
            app:layout_constraintStart_toEndOf="@+id/img_item4"
            app:layout_constraintBottom_toBottomOf="@+id/img_item4"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item4"
            app:layout_constraintStart_toEndOf="@+id/img_item3"
            app:layout_constraintBottom_toBottomOf="@+id/img_item3"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item3"
            app:layout_constraintStart_toEndOf="@+id/img_item2"
            app:layout_constraintBottom_toBottomOf="@+id/img_item2"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item2"
            app:layout_constraintStart_toEndOf="@+id/img_item1"
            app:layout_constraintBottom_toBottomOf="@+id/img_item1"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_champion" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_queue"
            app:layout_constraintTop_toTopOf="@+id/image_champion" app:layout_constraintStart_toEndOf="@+id/image_champion"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_score" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_queue" app:layout_constraintStart_toStartOf="@+id/text_queue"
            app:layout_constraintEnd_toEndOf="@+id/text_queue"
    />
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_item1" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/image_champion"
            app:layout_constraintBottom_toBottomOf="@+id/image_champion"/>
</android.support.constraint.ConstraintLayout>